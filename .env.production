# ============================================
# Production Environment Configuration
# ============================================

# Authentication Configuration
AUTH_MODE=full
DATABASE_URL="postgresql://user:password@prod-db.example.com:5432/horizon_hcm?schema=public"

# Redis
REDIS_HOST="prod-redis.example.com"
REDIS_PORT=6379
REDIS_PASSWORD="your-redis-password"
REDIS_TLS=true

# JWT Keys (use secrets manager in production)
JWT_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nREPLACE_WITH_ACTUAL_KEY\n-----END RSA PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nREPLACE_WITH_ACTUAL_KEY\n-----END PUBLIC KEY-----"

# Cookie Configuration
COOKIE_DOMAIN=".horizon-hcm.com"
COOKIE_SECURE=true

# Application
PORT=3001
NODE_ENV="production"
APP_NAME="Horizon-HCM"
FRONTEND_URL="https://app.horizon-hcm.com"

# Feature Flags
ENABLE_2FA=true
ENABLE_DEVICE_MGMT=true
MAX_DEVICES=5
ENABLE_PUSH=true
ENABLE_ACCOUNT_MGMT=true
ALLOW_REACTIVATION=true

# Cache
CACHE_NAMESPACE=horizon-hcm-prod

# Logging
LOG_LEVEL=warn
SEQ_URL=https://seq.horizon-hcm.com
SEQ_API_KEY=your-seq-api-key

# Security
IP_WHITELIST=10.0.0.0/8

# File Storage
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=horizon-hcm-prod-files

# Push Notifications
FCM_SERVICE_ACCOUNT_PATH=/app/secrets/fcm-service-account.json
APNS_KEY_PATH=/app/secrets/apns-key.p8
APNS_KEY_ID=your-key-id
APNS_TEAM_ID=your-team-id
VAPID_PUBLIC_KEY=your-public-key
VAPID_PRIVATE_KEY=your-private-key
VAPID_SUBJECT=mailto:support@horizon-hcm.com

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
