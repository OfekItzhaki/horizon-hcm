# ============================================
# Authentication Configuration
# ============================================

# Auth Mode: 'full' (standalone) or 'sso' (centralized auth service)
AUTH_MODE=full

# SSO Configuration (only used when AUTH_MODE=sso)
# AUTH_SERVICE_URL=https://auth.ofeklabs.com

# Database (only used in Full mode)
DATABASE_URL="postgresql://user:password@localhost:5432/horizon_hcm?schema=public"

# Redis (required for Full mode, used for sessions and caching)
REDIS_HOST="localhost"
REDIS_PORT=6379

# JWT Keys (can use file paths or direct values)
# Option 1: Use files (default)
# JWT_PRIVATE_KEY and JWT_PUBLIC_KEY will be read from certs/ folder
# Option 2: Set directly as environment variables
# JWT_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
# JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"

# Cookie Configuration
COOKIE_DOMAIN=".horizon-hcm.com"

# Application
PORT=3001
NODE_ENV="development"
APP_NAME="Horizon-HCM"

# Frontend URL (for email links)
FRONTEND_URL="http://localhost:3000"

# ============================================
# Email Configuration
# ============================================

# Email Provider: 'resend' or 'sendgrid' (or leave empty for console logging in dev)
# Get API key from https://resend.com (recommended) or https://sendgrid.com
# RESEND_API_KEY=re_xxxxxxxxxxxxx
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxx

# Email From Address
EMAIL_FROM="noreply@horizon-hcm.com"

# ============================================
# Feature Flags for @ofeklabs/horizon-auth
# ============================================

# Two-Factor Authentication
ENABLE_2FA=true

# Device Management
ENABLE_DEVICE_MGMT=true
MAX_DEVICES=10

# Push Notifications
ENABLE_PUSH=true

# Account Management (deactivation/reactivation)
ENABLE_ACCOUNT_MGMT=true
ALLOW_REACTIVATION=true

# ============================================
# Infrastructure Configuration
# ============================================

# Cache
CACHE_NAMESPACE=horizon-hcm

# FCM (Firebase Cloud Messaging) - Optional
# FCM_SERVICE_ACCOUNT_PATH=./path/to/service-account.json

# APNS (Apple Push Notification Service) - Optional
# APNS_KEY_PATH=./path/to/apns-key.p8
# APNS_KEY_ID=your-key-id
# APNS_TEAM_ID=your-team-id

# Web Push - Optional
# VAPID_PUBLIC_KEY=your-public-key
# VAPID_PRIVATE_KEY=your-private-key
# VAPID_SUBJECT=mailto:your-email@example.com

# ============================================
# Security Configuration
# ============================================

# IP Whitelist (comma-separated list of allowed IPs)
# Supports exact IPs, CIDR notation, and wildcards
# Examples:
#   - Exact: 192.168.1.100
#   - CIDR: 192.168.1.0/24
#   - Wildcard: 192.168.1.*
# IP_WHITELIST=127.0.0.1,192.168.1.0/24,10.0.0.*

# AWS S3 Configuration (for file storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=horizon-hcm-files

